/* Responsive */
@media (max-width: 768px) {
    .filter-buttons, .sort-controls {
        flex-direction: column;
    }
    
    .pagination-navigation {
        flex-direction: column;
    }
    
    .students-grid {
        grid-template-columns: 1fr;
    }
}
</style>
