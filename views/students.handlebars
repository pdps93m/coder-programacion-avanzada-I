{{!-- Vista de Estudiantes con Paginaci√≥n --}}
<div class="container">
    <h2>üéì Estudiantes con Paginaci√≥n</h2>
    
    {{!-- SECCI√ìN 1: ESTAD√çSTICAS R√ÅPIDAS --}}
    <div class="stats-section">
        <h3>üìä Estad√≠sticas por Curso</h3>
        <div class="stats-grid">
            {{#each estadisticas}}
            <div class="stat-card">
                <h4>{{this._id}}</h4>
                <p class="stat-number">{{this.cantidad}} estudiantes</p>
                <p class="stat-detail">Edad promedio: {{this.edadPromedio}} a√±os</p>
            </div>
            {{/each}}
        </div>
    </div>

    {{!-- SECCI√ìN 2: FILTROS Y CONTROLES --}}
    <div class="controls-section">
        <h3>üîç Filtrar por Curso</h3>
        <div class="filter-buttons">
            <a href="{{pagination.todosUrl}}" class="filter-btn {{#unless currentQuery}}active{{/unless}}">
                Todos los Cursos
            </a>
            <a href="{{pagination.inicialUrl}}" class="filter-btn {{#if isInicial}}active{{/if}}">
                Inicial
            </a>
            <a href="{{pagination.medioUrl}}" class="filter-btn {{#if isMedio}}active{{/if}}">
                Medio
            </a>
            <a href="{{pagination.avanzadoUrl}}" class="filter-btn {{#if isAvanzado}}active{{/if}}">
                Avanzado
            </a>
        </div>
        
        {{!-- ORDENAMIENTO --}}
        <div class="sort-controls">
            <span>Ordenar por edad:</span>
            <a href="/students-view?page={{pagination.currentPage}}&limit={{currentLimit}}&sort=asc&query={{currentQuery}}" 
               class="sort-btn {{#ifEquals currentSort 'asc'}}active{{/ifEquals}}">
                Menor a Mayor
            </a>
            <a href="/students-view?page={{pagination.currentPage}}&limit={{currentLimit}}&sort=desc&query={{currentQuery}}" 
               class="sort-btn {{#ifEquals currentSort 'desc'}}active{{/ifEquals}}">
                Mayor a Menor
            </a>
        </div>
    </div>

    {{!-- SECCI√ìN 3: INFORMACI√ìN DE PAGINACI√ìN --}}
    <div class="pagination-info">
        <p>
            üìÑ Mostrando p√°gina <strong>{{pagination.currentPage}}</strong> de <strong>{{pagination.totalPages}}</strong>
            ({{pagination.totalStudents}} estudiantes total)
        </p>
    </div>

    {{!-- SECCI√ìN 4: LISTA DE ESTUDIANTES --}}
    <div class="students-section">
        {{#if students.length}}
            <div class="students-grid">
                {{#each students}}
                <div class="student-card">
                    <div class="student-header">
                        <h4>{{this.nombre}} {{this.apellido}}</h4>
                        <span class="curso-badge curso-{{this.curso}}">{{this.curso}}</span>
                    </div>
                    <div class="student-info">
                        <p><strong>Edad:</strong> {{this.edad}} a√±os</p>
                        <p><strong>Email:</strong> {{this.email}}</p>
                        <p><strong>Inscripci√≥n:</strong> {{this.fechaInscripcion}}</p>
                        {{#if this.activo}}
                            <span class="status active">‚úÖ Activo</span>
                        {{else}}
                            <span class="status inactive">‚ùå Inactivo</span>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        {{else}}
            {{#if error}}
                <div class="error-message">
                    <p>‚ùå {{error}}</p>
                </div>
            {{else}}
                <div class="no-students">
                    <p>No se encontraron estudiantes con los filtros aplicados.</p>
                    <a href="/students-view" class="btn">Ver todos los estudiantes</a>
                </div>
            {{/if}}
        {{/if}}
    </div>

    {{!-- SECCI√ìN 5: NAVEGACI√ìN DE P√ÅGINAS --}}
    {{#if pagination.totalPages}}
    <div class="pagination-navigation">
        {{!-- Bot√≥n Anterior --}}
        {{#if pagination.hasPrevPage}}
            <a href="{{pagination.prevUrl}}" class="nav-btn prev-btn">
                ‚¨ÖÔ∏è Anterior
            </a>
        {{else}}
            <span class="nav-btn prev-btn disabled">‚¨ÖÔ∏è Anterior</span>
        {{/if}}

        {{!-- N√∫meros de p√°gina --}}
        <div class="page-numbers">
            {{#each (range 1 pagination.totalPages)}}
                {{#ifEquals this ../pagination.currentPage}}
                    <span class="page-number current">{{this}}</span>
                {{else}}
                    <a href="/students-view?page={{this}}&limit={{../currentLimit}}&sort={{../currentSort}}&query={{../currentQuery}}" 
                       class="page-number">{{this}}</a>
                {{/ifEquals}}
            {{/each}}
        </div>

        {{!-- Bot√≥n Siguiente --}}
        {{#if pagination.hasNextPage}}
            <a href="{{pagination.nextUrl}}" class="nav-btn next-btn">
                Siguiente ‚û°Ô∏è
            </a>
        {{else}}
            <span class="nav-btn next-btn disabled">Siguiente ‚û°Ô∏è</span>
        {{/if}}
    </div>
    {{/if}}
</div>

{{!-- ESTILOS CSS ESPEC√çFICOS PARA ESTUDIANTES --}}
<style>
